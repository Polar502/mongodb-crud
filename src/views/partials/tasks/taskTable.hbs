{{#if tasks}}
{{! ciclo for in Handlebars }}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>No.</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Operaciones</th>
    </tr>
  </thead>

  <tbody>
    {{#each tasks}}
    <tr>
        <td>{{@index}}</td>
        <td>
            {{title}}
        </td>
        <td>
            {{description}}
        </td>
        <td>
            {{!-- conditional if in Handlebars --}}
            {{#if done }}
              <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Pendiente</a>
            {{else}}
             <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Hecha</a>
            {{/if}} 

            <a href="/tasks/{{_id}}/delete " class="btn btn-danger">Eliminar</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Editar</a>
        </td>
    </tr>

    {{/each}}
  </tbody>
</table>

    {{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>Por ahora, no tienes tareas pendientes</h1>
      <img src="/icons/empty.png" class="w-25" />
    </div>

  </div>



{{/if}}